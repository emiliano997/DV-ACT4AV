generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tablas de la base de datos
model Product {
  id     String        @id @default(uuid())
  name   String        @unique
  price  Float
  stock  Int
  image  String
  status ProductStatus
}

enum ProductStatus {
  available
  unavailable
}
